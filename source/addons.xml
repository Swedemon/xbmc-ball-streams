<addons>
<addon id="plugin.video.xbmc-ball-streams-frodo" name="XBMC Ball Streams" version="3.0.8" provider-name="Craig McNicholas, Swedemon">
	<requires>
		<import addon="xbmc.python" version="2.0" />
	</requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Video plugin for ballstreams.com</summary>
		<description>This Add-on allows access to ballstreams.com streams, you will need a premium account at ballstreams.com for this Add-on to function</description>
		<platform>all</platform>
		<license>GNU GPL v3</license>
		<disclaimer>Some parts of this addon may not be legal in your country of residence - please check with your local laws before installing.</disclaimer>
	</extension>
</addon>

